{
  "name": "electron-vite-app",
  "version": "1.0.0",
  "description": "Electron + Vite + React + TypeScript starter",
  "type": "module",
  "main": "dist/main.cjs",
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  },
  "build": {
    "appId": "com.example.electron-vite-app",
    "productName": "Electron Vite App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage", "deb", "rpm"]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node build.mjs",
    "build:electron": "node build.mjs",
    "build:linux": "pnpm build && electron-builder --linux",
    "build:macos": "pnpm build && electron-builder --mac",
    "build:windows": "pnpm build && electron-builder --win",
    "start": "pnpm build && electron ."
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.25.11",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  }
}
